{% extends "base.twig" %}

{% block content %}
  <section id="welcome" class="section">
    <div class="row">
      <div class="large-12 columns">
        <img src="{{site.theme.link}}/images/header.png">
      </div>
    </div>
  </section>

  <section id="about" class="section">
    <div class="row">
      <div class="large-12 columns">
        <h2 class="red">O que é ?</h2>
        <ul class="slideshow" data-orbit>
          {% for slide in slideshow %}
          <li>
            {{slide.content}}
          </li>
	  {% endfor %}
        </ul>
      </div>
    </div>
  </section>

      <section id="supporters" class="section">
      <div class="row">
        <div class="large-7 columns">
          <h3 class="white">Quem apoia</h2>
            <ul class="slideshow" data-orbit>
              {% for tweet in tweets %}
              <li>
                <div class="tweet">
                  {{tweet.content}}
                </div>
                <div class="author">
                  {{tweet.get_field('author')}}
                </div>
              </li>
	      {% endfor %}
            </ul>
            <i class="fa fa-twitter stamp"></i>
        </div>
        <div class="large-5 columns live">
          <div class="large-12 columns">
            <h3 class="white right">Ao vivo</h3>
          </div>
          <div class="large-12 columns">
            <ul>
